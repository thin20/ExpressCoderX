extends ../layouts/common

block content
    h2 
        span Users
        a(href="/users/create" class="btn btn-primary ml-4") Create

    form(action="users/search" class="form-group ml-auto d-flex")
            input(type="text" name="name" class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table
        tr 
            th Avatar 
            th Name 
            th Age 
            th
        each user in users
            tr
                td
                    image(src= user.avatar, width= 48)
                td(class="user")= user.name 
                td(class="phone")= user.age
                td 
                    a.btn.btn-light(href="/users/" + user._id) view
