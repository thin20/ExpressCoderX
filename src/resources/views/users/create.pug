extends ../layouts/common

block content
    h1 Create user 

    if errors 
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST") 
        .form-group
            label(for="name") Name 
            input#name.form-control(name="name" type="text" value= values?values.name:'')

        .form-group
            label(for="age") Age 
            input#age.form-control(name="age" type="text" value= values?values.age:'')

        button.btn.btn-primary Create

    a(href="/users") Back